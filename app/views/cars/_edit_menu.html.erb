<%- model_class = Car -%>
<div class="page-header">
  <h1><%=t '.title', :default => [:'helpers.titles.edit', 'Edit %{model}'], :model => model_class.model_name.human.titleize %><small><%= " #{@car.brand.name} #{@car.model}" %></small></h1>
</div>

<ul class="nav nav-pills">
  <% if active == 'Basic' %>
  	<%= render text: '<li class="active">'.html_safe %>
  <% else %>
  	<%= render text: '<li>'.html_safe %>
  <% end %>
  <%= link_to 'Basic', edit_car_path(@car) %></li>   

  <% if active == 'Location' %>
  	<%= render text: '<li class="active">'.html_safe %>
  <% else %>
  	<%= render text: '<li>'.html_safe %>
  <% end %>
  <%= link_to 'Location', edit_location_car_path(@car) %></li>

  <% if active == 'Pictures' %>
  	<%= render text: '<li class="active">'.html_safe %>
  <% else %>
  	<%= render text: '<li>'.html_safe %>
  <% end %>
  <%= link_to 'Pictures', edit_pictures_car_path(@car) %></li>

  <% if active == 'Calendar' %>
  	<%= render text: '<li class="active">'.html_safe %>
  <% else %>
  	<%= render text: '<li>'.html_safe %>
  <% end %>
  <%= link_to 'Calendar', edit_calendar_car_path(@car) %></li>
</ul>