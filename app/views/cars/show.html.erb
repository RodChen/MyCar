<%- model_class = Car -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:model) %></th>
      <th><%= model_class.human_attribute_name(:year) %></th>
      <th><%= model_class.human_attribute_name(:rentaldates) %></th>
      <th><%= model_class.human_attribute_name(:price) %></th>
      <th><%= model_class.human_attribute_name(:location) %></th>
      <th><%= model_class.human_attribute_name(:auto_transmission) %></th>
      <th><%= model_class.human_attribute_name(:mileage) %></th>
      <th><%= model_class.human_attribute_name(:color) %></th>
      <th><%= model_class.human_attribute_name(:remarks) %></th>
      <th><%= model_class.human_attribute_name(:user_id) %></th>
      <th><%= model_class.human_attribute_name(:brand) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
        <tr>
        <td><%= @car.model %></td>
        <td><%= @car.year %></td>
        <td><%= @car.rentaldates %></td>
        <td><%= @car.price %></td>
        <td><%= @car.location %></td>
        <td><%= @car.auto_transmission %></td>
        <td><%= @car.mileage %></td>
        <td><%= @car.color %></td>
        <td><%= @car.remarks %></td>
        <td><%= @car.user_id %></td>
        <td><%= @car.brand.name %></td>
        <td><%= @car.created_at %></td>
        <td>
        
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_car_path(@car), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      car_path(@car),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
  </tbody>
</table>

<% @car.pictures.each do |photo| %>
  <% if !photo.title.empty? %>
    <div class="row">
      <div class="col-md-12">
        <div class="thumbnail">
            <%= image_tag photo.image.url  %> 
          <div class="caption">
              <%= "說明 #{photo.title}" %>
          </div>
        </div>
      </div>
    </div>  
  <% else %>
  <% end %>  
<% end %>