<h2>Upload car pictures</h2>
<%= form_for @car, url: wizard_path, :html => { :multipart => true } do |f| %>

  <% if @car.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@car.errors.count, "error") %> prohibited this car from being saved:</h2>

      <ul>
      <% @car.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>


  <div class="form-group">   
   <%= f.fields_for :pictures do |builder| %>
     <div class = "row">
      <div class = "col-xs-6">
        <%= builder.label :title, class: 'control-label' %>
        <%= builder.text_field :title, class: 'form-control', placeholder: '照片描述' %>
      </div>
      <div class = "col-xs-6">
        <%= builder.label :image %>
        <%= builder.file_field :image %>
      </div> 
    </div>
   <% end %>
  </div>

  <%= f.submit 'Finish', :class => 'btn btn-primary' %>  
<% end %>
