<%= form_for(@car, :url => cars_path, :html => { :multipart => true }) do |f| %>
  <% if @car.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@car.errors.count, "error") %> prohibited this car from being saved:</h2>

      <ul>
      <% @car.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <fieldset>
  <legend>New Car</legend>
  <div class="field">
    <%= f.label :brand %><br>
    <%= f.select :brand, Car::BRAND_TYPE, prompt: 'Select a Brand' %>
  </div>
  <div class="field">
    <%= f.label :model %><br>
    <%= f.text_field :model %>
  </div>
  <div class="field">
    <%= f.label :year %><br>
    <%= f.number_field :year %>
  </div>
  <div class="field">
    <%= f.label :rentaldates %><br>
    <%= f.date_select :rentaldates %>
  </div>
  <div class="field">
    <%= f.label :price %><br>
    <%= f.number_field :price %>
  </div>
  <div class="field">
    <%= f.label :location %><br>
    <%= f.text_field :location %>
  </div>
  <div class="field">
    <%= f.label :auto_transmission %><br>
    <%= f.check_box :auto_transmission %>
  </div>
  <div class="field">
    <%= f.label :mileage %><br>
    <%= f.number_field :mileage %>
  </div>
  <div class="field">
    <%= f.label :color %><br>
    <%= f.text_field :color %>
  </div>
  <div class="field">
    <%= f.label :remarks %><br>
    <%= f.text_area :remarks %>
  </div>
  
  <div class="field">
  <%= f.file_field :avatar %>
  </div>
  
  </fieldset>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
